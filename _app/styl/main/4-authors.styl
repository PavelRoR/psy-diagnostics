#authors
	padding 200px 0 60px
	background-color: #C4E8E5
	@media screen and (max-width 991px)
		padding 60px 0
.author
	margin-bottom: 250px
	display flex
	flex-direction: row
	align-items: flex-start
	justify-content: space-between
	position relative
	@media screen and (max-width 991px)
		display block
		margin-bottom: 90px
	&-img
		display block
		width 100%
		max-width 390px
		margin 0 auto
		position relative
		z-index 20
		@media screen and (max-width 991px)
			max-width 550px
	&-info
		margin-top: 60px
		padding-left: 30px
		position relative
		z-index 10
		@media screen and (max-width 991px)
			z-index 70
		@media screen and (max-width 386px)
			padding-left: 0
		&-name
			position relative
			font-size: 19px
			margin-bottom: 40px
			padding-bottom: 15px
			margin-left: -30px
			@media screen and (max-width 386px)
				margin-left: 0
			&:before
				content: ''
				display block
				position absolute
				left 0
				bottom: 0
				width 130%
				min-width 611px
				height: 2px
				background-color: #6E6E6E
				@media screen and (max-width 991px)
					width 100%
					min-width auto
		&-text
			font-size: 13px
			margin-bottom: 15px
			@media screen and (max-width 991px)
				font-size: 15px
			&-spec
				margin-top: 50px
				@media screen and (max-width 386px)
					margin-top: 30px
		.general-list
			font-size: 13px
			margin-left: 15px
			@media screen and (max-width 991px)
				font-size: 15px
	&-2
		justify-content: flex-start
		.author-img
			margin-left: 50px
			margin-right: 50px
			@media screen and (max-width 1199px)
				margin-left: 0
			@media screen and (max-width 991px)
				margin-left: auto
				margin-right: auto
		.author-info-name
			margin-left: -25px
			@media screen and (max-width 386px)
				margin-left: 0
			&:before
				left -30%
				@media screen and (max-width 991px)
					left 0
	&-1
		margin-top: 20px
		@media screen and (max-width 991px)
			margin-top: 35px
	&-3
		margin-bottom: 130px
		@media screen and (max-width 991px)
			margin-bottom: 60px
	&-1
	&-3
		flex-direction: row-reverse
		.author-img
			margin-right: 50px
			margin-left 70px
			@media screen and (max-width 1199px)
				margin-right: 0
			@media screen and (max-width 991px)
				margin-left: auto
				margin-right: auto
		.author-info
			margin-left: 160px
			@media screen and (max-width 1199px)
				margin-left: 0
.general-img-author-1
	left: -49%
	right -50%
	bottom: -270px
	z-index 30
	@media screen and (max-width 1199px)
		left: -69%
	@media screen and (max-width 991px)
		width 1405px
		left -50%
		bottom: 30%
	@media screen and (max-width 386px)
		left -20%
		bottom: 330px
		width 1200px
.general-img-author-2
	display none
	@media screen and (max-width 991px)
		display block
		left: auto
		right -10%
		bottom: 20%
		z-index 30
	@media screen and (max-width 650px)
		bottom: 300px
		right -100px
		width 1200px
	@media screen and (max-width 460px)
		right -45%
	@media screen and (max-width 385px)
		right -70%
		bottom: 380px