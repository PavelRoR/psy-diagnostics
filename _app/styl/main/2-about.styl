#about
	padding: 90px 0 270px
.about-item
	&s
		position relative
		margin 30px auto 110px
		@media screen and (max-width 650px)
			margin-bottom: 200px
	border-radius: 54px
	padding 26px 30px
	margin-bottom: 40px
	min-height 355px
	@media screen and (max-width 1199px)
		min-height 375px
	@media screen and (max-width 991px)
		min-height 1px
	@media screen and (max-width 650px)
		margin-bottom: 15px
	&-pink
		background-color: #F2F0F0
	&-lightblue
		background-color: #F1F8FF
	&-blue
		background-color: #DDEBFA
	&-head
		display flex
		align-items: center
		justify-content: flex-start
		margin-bottom: 23px
		@media screen and (max-width 386px)
			display block
		&-title
			font-family: RG
			font-size: 24px
			font-weight: bold
			margin-left: 22px
			color: #247974
			@media screen and (max-width 386px)
				margin 15px 0
	&-single
		padding 70px
		border-radius: 46px
		background-color: #DDFAF9
		min-height 1px
		@media screen and (max-width 650px)
			padding 60px 50px
		@media screen and (max-width 386px)
			padding 40px 30px
		&-1
			margin-top: 70px
			@media screen and (max-width 650px)
				margin: 60px 0 150px
		&-2
			padding 70px 120px
			@media screen and (max-width 650px)
				padding 60px 50px
			@media screen and (max-width 386px)
				padding 40px 30px
		&-title
			font-family: RG
			font-size: 28px
			font-weight: bold
			@media screen and (max-width 386px)
				font-size: 24px
.general-img-about-arrow-1
	top 118px
	right -10px
	@media screen and (max-width 991px)
		display none
.general-img-about-arrow-2
	display none
	@media screen and (max-width 991px)
		display block
		right 25px
		top 185px
	@media screen and (max-width 500px)
		top 200px
	@media screen and (max-width 386px)
		right -25px
.general-img-about-1
	margin 0 auto
	left: -50%
	right -50%
	top 230px
	@media screen and (max-width 650px)
		display none
.general-img-about-1-mob
	display none
	@media screen and (max-width 650px)
		display block
		left -150px
		top: -165px
		z-index -1
	@media screen and (max-width 386px)
		left -220px
.general-img-about-2-mob
	display none
	@media screen and (max-width 991px)
		display block
		left -100px
		bottom: -260px
		z-index -1
	@media screen and (max-width 386px)
		left -130px
.about-time
	margin-top: 150px
	@media screen and (max-width 991px)
		text-align center
		margin-top: 75px
	&-img
		display block
		margin 20px auto 45px
	&-5
		background-color: #F2F0F0
		border-top-right-radius: 32px
		border-bottom-right-radius: 32px
		padding 10px 35px
		width 100%
		max-width 400px
		@media screen and (max-width 991px)
			max-width 225px
			border-radius: 30px
			display inline-block
		&-text
			font-size: 50px
	.general-text
		margin-top: 7px
		@media screen and (max-width 991px)
			margin-bottom: 35px
			text-align center
.general-img-about-2
	bottom: -250px
	right -20%
	@media screen and (max-width 991px)
		width 365px
		z-index -1
		right -270px
		bottom: -200px