#main
	padding 20px 0 125px
	background-color: #C4E8E5
	@media screen and (max-width 991px)
		padding-bottom: 200px
	@media screen and (max-width 386px)
		padding-bottom: 180px
.main-title
	font-family: RG
	font-size: 55px
	font-weight: bold
	margin 100px 0 20px
	@media screen and (max-width 1199px)
		margin-top: 50px
		max-width 90%
	@media screen and (max-width 991px)
		font-size: 39px
		max-width 100%
		margin-top: 205px
	@media screen and (max-width 618px)
		margin-top: 185px
	@media screen and (max-width 579px)
		margin-top: 155px
	@media screen and (max-width 480px)
		margin-top: 5px
	@media screen and (max-width 386px)
		font-size: 30px;
.main-subtitle
	font-size: 17px
	color #666666
	margin-bottom: 150px
	width 100%
	max-width 590px
	@media screen and (max-width 991px)
		margin: 165px 0 100px;
		max-width: 50%;
	@media screen and (max-width 578px)
		margin-top: 100px
		margin-bottom: 60px
	@media screen and (max-width 386px)
		margin-top: 100px
	@media screen and (max-width 337px)
		margin-top: 100px
	@media screen and (max-width 316px)
		margin-bottom: 30px
.general-img-main
	bottom: -25px
	right -125px
	z-index 2
	@media screen and (max-width 991px)
		display none
.general-img-main-mob
	display none
	@media screen and (max-width 991px)
		display block
		z-index 0
		top 30px
		right -25px
	@media screen and (max-width 650px)
		right -85px
	@media screen and (max-width 618px)
		right -180px
	@media screen and (max-width 480px)
		display none
.general-img-main-mob-2
	display none
	@media screen and (max-width 480px)
		display block
		z-index 0
		bottom: -180px
		right -180px
	@media screen and (max-width 431px)
		bottom: -150px
	@media screen and (max-width 391px)
		bottom: -135px
	@media screen and (max-width 386px)
		bottom: -130px
	@media screen and (max-width 336px)
		right -225px
	@media screen and (max-width 316px)
		bottom: -120px