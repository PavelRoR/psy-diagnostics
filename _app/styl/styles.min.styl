.mobile-menu
	display: none;
	position: absolute;
	width: 56px;
	height: 40px;
	padding: 0
	top 70px
	right: 15px;
	cursor: pointer;
	z-index: 200;
	&-line
		width: 100%;
		height: 5px;
		background-color: #000
		position: absolute;
		transition: all .4s ease
		&-1
			top 0
			&.switched
				transform: rotate(45deg)
				top 13px
				right: 0;
				left: 0;
				width: 42px;
		&-2
			top calc(50% - 2.5px)
			&.switched
				opacity: 0;
		&-3
			bottom: 0
			&.switched
				transform: rotate(-45deg)
				top 13px
				left: 0;
				right: 0;
				width: 42px;
.nav-active
	left: 0 !important;
@media screen and (max-width: 991px)
	.header-menu
		position: fixed;
		width: 100%;
		height: 100vh;
		background-color: #fff;
		padding: 60px 20px 20px;
		z-index: 190;
		top -20px
		left: -100%
		transition: all .3s ease
	.mobile-menu
		display: block;
	.header-menu li
		margin-bottom: 40px;
		margin-left: 0