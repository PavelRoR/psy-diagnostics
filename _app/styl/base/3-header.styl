header
	overflow hidden
	padding 20px 0
	margin-bottom: 40px
.header-logo
	float left
	@media screen and (max-width 991px)
		float: none
.header-menu
	float: right
	text-align center
	margin-top: 18px
	li
		display inline-block
		list-style: none
		margin-left: 30px
		@media screen and (max-width 1199px)
			margin-left: 10px
		@media screen and (max-width 991px)
			text-align left
			display block
		&:first-child
			margin-left: 0
		a
			font-size: 12px
			padding 7px 46px
			border-radius: 24px
			border: 1px solid #000
			display block
			width 100%
			height 100%
			color #000
			@media screen and (max-width 1199px)
				padding 7px 26px
			@media screen and (max-width 991px)
				font-size: 15px
				border-radius: 0
				border: none
				display inline-block
				width auto
			&:focus
			&:hover
				color #000
.fixed
	position fixed